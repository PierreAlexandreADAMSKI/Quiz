<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quiz_end_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="15dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/end"
                    android:layout_marginTop="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/loginTextView" />
        -->
        <TextView
            android:id="@+id/end_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Quiz is over !"
            android:textColor="@color/text"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/loginTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/end_sentence"
            android:gravity="center"
            android:padding="8dp"
            android:text="Login:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/timeTextView"
            android:layout_below="@+id/loginTextView"
            android:gravity="center"
            android:padding="8dp"
            android:text="Score : x/y"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text" />


        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreTextView"
            android:gravity="center"
            android:padding="8dp"
            android:text="Time:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeTextView"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="Ok !" />

    </RelativeLayout>
</android.support.v7.widget.CardView>