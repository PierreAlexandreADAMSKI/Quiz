<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="15dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/card"
        android:layout_alignStart="@+id/card"
        android:layout_below="@+id/card"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quizImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:src="@drawable/modulars_icon" />


        <TextView
            android:id="@+id/quizNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizImageView"
            android:gravity="center"
            android:text="@string/quiz_name"
            android:textColor="@color/text"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/quizDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizNameTextView"
            android:layout_toRightOf="@+id/timerLogo"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:text="@string/quiz_duration"
            android:gravity="right"
            android:textColor="@color/text"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/timerLogo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/quizNameTextView"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/timer"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>