<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    card_view:cardElevation="15dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="0dp">

    <!-- Ã  travailler pour que ce soit bogoss -->
    <LinearLayout
        android:id="@+id/movieOverviewContentLayout"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_alignLeft="@+id/card"
        android:layout_alignStart="@+id/card"
        android:layout_below="@+id/card"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quizImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/quiz" />

        <TextView
            android:id="@+id/launchedQuizNameTextView"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/quiz_name"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/launchedQuizDurationTextView"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="@string/quiz_name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>