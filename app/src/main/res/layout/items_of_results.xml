<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_bar"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary">

            <EditText
                android:id="@+id/search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text"
                />
        </RelativeLayout>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/search_bar"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="15dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignLeft="@+id/card"
            android:layout_alignStart="@+id/card"
            android:layout_below="@+id/card"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resultImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/results"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/quizNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/quiz_name"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/resultImageView" />

            <TextView
                android:id="@+id/quizResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Score : x/y"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/quizNameTextView"
                android:layout_toEndOf="@+id/resultImageView" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="20dp"
                android:layout_alignBottom="@+id/resultImageView"
                android:layout_toRightOf="@+id/resultImageView"/>

            <ImageView
                android:id="@+id/star2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_below="@+id/quizResultTextView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/star1"/>

            <ImageView
                android:id="@+id/star3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="2dp"
                android:layout_alignBottom="@+id/resultImageView"
                android:layout_toRightOf="@+id/star2"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/quizResultTextView"
                android:layout_toRightOf="@+id/star3"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/star4"
                android:layout_alignBottom="@+id/resultImageView"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
